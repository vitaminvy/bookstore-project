@page
@model TonKhoModel
@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger" role="alert">
        @Model.ErrorMessage
    </div>
}
<h2>Danh sách tồn kho</h2>
<table border="1" cellpadding="6">
    <thead>
        <tr>
            <th>Mã sách</th>
            <th>Tiêu đề</th>
            <th>Tồn kho</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.TonKhoList)
    {
        <!-- các props -->
        <tr>
            <td>@item.MaSach</td>
            <td>@item.TieuDe</td>
            <td>@item.SoLuongTon</td>
        </tr>
    }
    </tbody>
</table>
