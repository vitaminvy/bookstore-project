@page
@model QuanLyNhaSach.Pages.Sach.CreateTacGiaModel

<h2>🖊️ Thêm Tác Giả Mới</h2>

@if (!string.IsNullOrEmpty(Model.ThongBao))
{
    <div class="alert alert-info">@Model.ThongBao</div>
}

<form method="post">
    <div class="mb-3">
        <label>Mã tác giả</label>
        <input asp-for="MaTacGia" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Họ tên</label>
        <input asp-for="HoTen" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Tiểu sử</label>
        <textarea asp-for="TieuSu" class="form-control" rows="3"></textarea>
    </div>

    <div class="mb-3">
        <label>Năm sinh</label>
        <input asp-for="NamSinh" class="form-control" type="number" />
    </div>

    <div class="mb-3">
        <label>Quê quán</label>
        <input asp-for="QueQuan" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary mt-2">➕ Thêm tác giả</button>
</form>
